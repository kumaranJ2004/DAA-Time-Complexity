#include<stdio.h>
int main(){
    int c=0;
    int n;
    scanf("%d",&n);
    if(n==1){
        c++;
    }else{
        c++;
        for(int i=1;i<=n;i++){
            c++;
            for(int j=1;j<=n;j++){
                c++;
                c++;
                c++;
                break;
            }
            c++;
        }
        c++;
    }
    printf("%d",c);
}
